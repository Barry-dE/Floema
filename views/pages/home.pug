extends ../base.pug

block variables
    - var template  = 'home'

block content
    .home
        .home_wrapper
            .collections_titles
                each collection, index in collectionsResult
                    .collections_titles_label=`${home.data.collection} ${index === 0 ? "One": index === 1 ? "Two" : index === 2 ? "Three" : index === 3 ? "Four" : ""}`
                    .collections_titles_title=collection.data.title
            

            .home_gallery
                each media in home.data.gallery
                    figure.home_gallery_media
                        img.home_gallery_media_image(alt=media.image.alt src=media.image.url)

            a.home_link(href="/collection")=home.data.button
                svg.home_link_icon(xmlns='http://www.w3.org/2000/svg' viewbox="0 0 288 60")
                    path(stroke="currentColor" fill="none" d="M144,0.5c79.25,0,143.5,13.21,143.5,29.5S223.25,59.5,144,59.5S0.5,46.29,0.5,30S64.75,0.5,144,0.5z")


    
