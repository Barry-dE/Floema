extends ../base.pug

block variables
    - var template  = 'home'

block content
    .home
        .home_wrapper
            .collections_titles
                each collection, index in collectionsResult
                    .collections_titles_label=`${home.data.collection} ${index === 0 ? "One": index === 1 ? "Two" : index === 2 ? "Three" : index === 3 ? "Four" : ""}`
                    .collections_titles_title=collection.data.title
            

            .home_gallery
                each media in home.data.gallery
                    figure.home_gallery_media
                        img.home_gallery_media_image(alt=media.image.alt src=media.image.url)

            a(href="/collection")=home.data.button


    
